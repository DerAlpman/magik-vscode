{
    "name": "magik-vscode",
    "displayName": "Magik VS Code",
    "description": "Magik language support for VS Code",
    "version": "0.0.1",
    "publisher": "ollie_sims",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Programming Languages",
        "Themes"
    ],
    "activationEvents": [
        "onLanguage:magik",
        "onCommand:magik.goto",
        "onCommand:magik.compileMethod",
        "onCommand:magik.compileFile",
        "onCommand:magik.compileSelection"
    ],
    "main": "./src/magik",
    "contributes": {
        "languages": [
            {
                "id": "magik",
                "aliases": [
                    "Magik",
                    "magik"
                ],
                "extensions": [
                    ".magik"
                ],
                "configuration": "./languages/magik-configuration.json"
            },
            {
                "id": "message",
                "aliases": [
                    "Message",
                    "message"
                ],
                "extensions": [
                    ".msg"
                ],
                "configuration": "./languages/message-configuration.json"
            },
            {
                "id": "definition",
                "aliases": ["Definition", "definition"],
                "extensions": [".def"],
                "configuration": "./definition-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "magik",
                "scopeName": "source.magik",
                "path": "./grammars/magik.tmLanguage.json"
            },
            {
                "language": "message",
                "scopeName": "text.message",
                "path": "./grammars/message.tmLanguage.json"
            },
            {
                "language": "definition",
                "scopeName": "text.definition",
                "path": "./grammars/definition.tmLanguage.json"
            }
        ],
        "commands": [
            {
                "command": "magik.goto",
                "title": "Magik Goto"
            },
            {
                "command": "magik.compileMethod",
                "title": "Magik Compile Method"
            },
            {
                "command": "magik.compileFile",
                "title": "Magik Compile File"
            },
            {
                "command": "magik.compileSelection",
                "title": "Magik Compile Selection"
            },
            {
                "command": "magik.indentMethod",
                "title": "Magik Indent Method"
            }
        ],
        "keybindings": [
            {
                "command": "magik.compileMethod",
                "key": "f7",
                "when": "editorTextFocus"
            },
            {
                "command": "magik.compileSelection",
                "key": "f8",
                "when": "editorTextFocus"
            },
            {
                "command": "magik.compileFile",
                "key": "ctrl+f7",
                "when": "editorTextFocus"
            },
            {
                "command": "magik.goto",
                "key": "f3",
                "when": "editorTextFocus"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Magik configuration",
            "properties": {
                "magik-vscode.enableAutoIndentation": {
                    "type": "boolean",
                    "default": true,
                    "description": "Auto indent Magik code."
                }
            }
        },
        "iconThemes": [
            {
                "id": "magik-icons",
                "label": "Magik Icons",
                "path": "./themes/magik-icons.json"
            }
        ]
    },
    "scripts": {
        "lint": "eslint \"./src/**/*.js\"",
        "lint:fix": "npm run lint -- --fix",
        "prettier": "prettier --write \"src/**/*.js\""
    },
    "devDependencies": {
        "eslint": "5.9.0",
        "eslint-config-airbnb": "17.1.0",
        "eslint-config-airbnb-base": "13.1.0",
        "eslint-config-prettier": "3.3.0",
        "eslint-plugin-import": "2.14.0",
        "eslint-plugin-prettier": "3.0.0",
        "prettier": "1.15.3"
    }
}
